@page "/items/details/{id:int}"
@attribute [Authorize]

<h3 class="text-center mb-4">Item Details</h3>

@if (_item is null)
{
    <div class="text-center">
        <p class="text-muted">Loading...</p>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Category ID</th>
                        <th>User ID</th>
                        <th>Completed</th>
                        <th>Created Date</th>
                        <th>Completed Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@_item.Id</td>
                        <td>@_item.Title</td>
                        <td>@_item.Description</td>
                        <td>@_item.CategoryId</td>
                        <td>@_item.UserId</td>
                        <td>@(_item.Completed ? "Yes" : "No")</td>
                        <td>@_item.CreatedDate.ToShortDateString()</td>
                        <td>@(_item.CompletedDate.HasValue ? _item.CompletedDate.Value.ToShortDateString() : "N/A")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}

<div class="text-center mt-4">
    <a href="/items" class="btn btn-secondary">Back to List</a>
</div>