@page "/items"

<h3>Items List</h3>


<AuthorizeView>
    <Authorized>
        <a class="btn btn-success mt-1 mb-1" href="/items/create">
            <i class="fas fa-plus"></i> Create New Item
        </a>
    </Authorized>
</AuthorizeView>

@if (_items is null)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <p>Loading items...</p>
    </div>
}

else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>User</th>
                    <th>Completed</th>
                    <th>Created Date</th>
                    <th>Completed Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in _items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.CategoryId</td>
                        <td>@item.UserId</td>
                        <td>@(item.Completed ? "Yes" : "No")</td>
                        <td>@item.CreatedDate.ToShortDateString()</td>
                        <td>@(item.CompletedDate.HasValue ? item.CompletedDate.Value.ToShortDateString() : "N/A")</td>
                        <td>
                            <a href="/items/details/@item.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <AuthorizeView>
                                <Authorized>
                                    <a class="btn btn-danger btn-sm" href="/items/delete/@item.Id">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                    <a class="btn btn-warning btn-sm" href="/items/update/@item.Id">
                                        <i class="fas fa-edit"></i> Update
                                    </a>
                                </Authorized>
                            </AuthorizeView>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}