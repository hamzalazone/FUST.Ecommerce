@page "/categories"

<h3 class="text-center mb-4">Categories</h3>

@if (_categories is null)
{
    <div class="text-center">
        <p class="text-muted">Loading...</p>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in _categories)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <a href="/categories/details/@category.Id" class="btn btn-info btn-sm">Details</a>
                                <AuthorizeView>
                                    <Authorized>
                                        <a href="/categories/update/@category.Id" class="btn btn-warning btn-sm">Update</a>
                                        <a href="/categories/delete/@category.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </Authorized>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <AuthorizeView>
        <Authorized>
            <div class="text-center mt-4">
                <a href="/categories/create" class="btn btn-primary">Create New Category</a>
            </div>
        </Authorized>
    </AuthorizeView>
}